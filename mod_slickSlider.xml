<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.7.2" client="site" method="upgrade">
    <name>slickSlider</name>
    <author>Ken Wheeler, Franciszek Andruszkiewicz</author>
    <creationDate>07.07.2017</creationDate>
    <copyright>OpenSource</copyright>
    <version>1.0</version>
    <description>slickSlider is a Joomla! module based on Ken's Wheeler's slick.js. More info about source: http://kenwheeler.github.io/slick/</description>
    <files>
        <filename>mod_slickSlider.xml</filename>
        <filename module="mod_slickSlider">mod_slickSlider.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
        <folder>slick</folder>
        <folder>custom</folder>
        <folder>images</folder>
        <folder>language</folder>
    </files>
    <languages>
		<language tag="en-GB">language/en-GB.mod_slickSlider.ini</language>
	</languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="slider-width" type="text" default="100%" label="Slider width : " description="You can put any value (php, js etc.)! if it;s px or precent remember about '' " />
                <field name="slider-height" type="text" default="window.innerHeight" label="Slider height : " description="You can put any value (php, js etc.)! if it;s px or precent remember about '' " />
                <field name="dots" type="radio" default="true" label="Dots: " description="" class="btn-group btn-group-yesno">
                    <option value="true">JYES</option>
                    <option value="false">JNO</option>
                </field>
                <field name="arrows" type="radio" default="true" label="Arrows: " description="" class="btn-group btn-group-yesno">
                    <option value="true">JYES</option>
                    <option value="false">JNO</option>
                </field>
                <field name="autoplay" type="radio" default="true" value="true" label="Autoplay: " description="" class="btn-group btn-group-yesno">
                    <option value="true">JYES</option>
                    <option value="false">JNO</option>
                </field>
                <field name="autoplayspeed" type="text" default="3000" label="Autoplay speed (ms): " description="" class="btn-group btn-group-yesno" />
                <field name="animationspeed" type="text" default="300" label="Animation speed (ms): " description="" />
            
            <field type="spacer" name="&lt;div style=&quot;color:#fff; font-size:12px; font-weight:bold; padding:3px; margin:0; text-align:center; background:#333333;&quot;&gt;Slides&lt;/div&gt;" />
            <!-- slide 1 -->   
            <field name="slide_1_image" type="media" default="" label="Select image:" description=""/>
			<field name="slide_1_desc" type="textarea" default="" label="Text on image :" description=""/>
			<field name="slide_1_url" type="text" default="" label="Link :" description=""/>

            <!-- slide 2 -->   
            <field name="slide_2_image" type="media" default="" label="Select image:" description=""/>
